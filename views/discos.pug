doctype html
html
	head
		meta(charset="utf-8")
		title Listado de Albunes
		link(rel="stylesheet" type="text/css" href="/stylesheets/style.css")
	body
		if registros
			each registro in registros
				h2 #{registro.titulo}
				ul
					li #{registro.id}
					li #{registro.artista_id}
					li #{registro.ano}
html(lang='es')
	head
		meta(charset='utf-8')
		title Discos
		link(rel="stylesheet" type="text/css" href="/stylesheets/style.css")
	body
		h1 Discos
		h2 Listar discos
		if discos
			ul
				each disco in discos
					li= `${disco.id} ${disco.artista_id} ${disco.titulo} ${disco.ano}`
		h2 Editar discos
		form(method='POST' action='/discos')
			input(type='text' name='id' placeholder='id')
			input(type='text' name='artista_id' placeholder='artista_id')
			input(type='text' name='titulo' placeholder='titulo')
			input(type='text' name='ano' placeholder='ano')
			input(type='submit' value='editar')
		
		h2 Añadir discos
		form(method='POST' action='/discos')
			input(type='hidden' name='_method' value='PUT')
			input(type='text' name='artista_id' placeholder='artista_id')
			input(type='text' name='titulo' placeholder='titulo')
			input(type='text' name='ano' placeholder='ano')
			input(type='submit' value='añadir')
		h2 Suprimir discos
		form(method='POST' action='/discos')
			input(type='hidden' name='_method' value='DELETE')
			input(type='id' name='id' placeholder='id')
			input(type='submit' value='suprimir')